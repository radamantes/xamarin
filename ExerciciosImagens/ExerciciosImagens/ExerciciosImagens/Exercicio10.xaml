<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciciosImagens.Exercicio10">

    <AbsoluteLayout BackgroundColor="Yellow">

        
        <!--BOTÃO ANTERIOR-->
        <Image Source="https://i.ibb.co/zJQ5psS/anterio64.png"
               AbsoluteLayout.LayoutBounds="0.1,0.1,100,100"
               AbsoluteLayout.LayoutFlags="PositionProportional">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="anterior_Tapped" />
            </Image.GestureRecognizers>

        </Image>

        <!--BOTÃO PRÓXIMO-->
        <Image Source="https://i.ibb.co/9Z32BSc/proximo64.png"
               AbsoluteLayout.LayoutBounds="0.9,0.1,100,100"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               >

        <Image.GestureRecognizers>
            <TapGestureRecognizer Tapped="proximo_Tapped" />
        </Image.GestureRecognizers>

        </Image>

        <ActivityIndicator IsRunning="{Binding Source={x:Reference images}, Path=IsLoading}"
                           Color="Black" 
                           AbsoluteLayout.LayoutBounds="0.5,0.5,100,100"
                           AbsoluteLayout.LayoutFlags="PositionProportional"
               />

        <Image x:Name="images" Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,0.5,0.5"
                   AbsoluteLayout.LayoutFlags="All" 
               />
    </AbsoluteLayout>
</ContentPage>

