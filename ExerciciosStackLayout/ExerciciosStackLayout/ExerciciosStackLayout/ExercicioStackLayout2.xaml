<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciciosStackLayout.ExercicioStackLayout2"
             BackgroundColor="Purple"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Cadastro de Clientes"
                   HorizontalOptions="Center"
                   FontSize="30" FontAttributes="Bold"
                   TextColor="White"
                   />
            <Label Text="Exercícios Xamarin.Forms" FontSize="18" TextColor="White" HorizontalOptions="Center"/>

            <Button Text="Login" FontSize="18" FontAttributes="Bold" BackgroundColor="#1dabf0" Margin="0,25,0,0"/>
            <Button Text="Registro" FontSize="18" FontAttributes="Bold" BackgroundColor="#1dabf0" Margin="0,20,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>